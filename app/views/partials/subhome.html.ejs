	<div class="ui page grid">

		<!-- For mobile screens -->
		<% if(locals.req.device.type != 'desktop'){ %>
			<div id="irx-mobile" class="ui column stackable">
		        <div class="ui transition information visible">
			        <form data-bind="submit: searchFun" >
				        <div class="ui form _radiogroup_">
				        	<input type="hidden" name="projectId" placeholder="Search..." id="__projectId">
							<div class="field _sType_" data-attr="project">
				      <div class="ui radio checkbox checked _main_">
						<div class="radiobutton active"></div>
				        <input type="radio" name="search" class="__searchType"  value="project" checked="checked">
				        <label>Projects</label>
				      </div>
				    </div>
				    <div class="field _sType_" data-attr="agent">
				      <div class="ui radio checkbox _main_">
						<div class="radiobutton"></div>
				        <input type="radio" name="search" class="__searchType" value="agent">
				        <label>Agents</label>
				      </div>
				    </div>
				    <div class="field" data-attr="locality">
				      <div class="ui radio checkbox _main_">
						<div class="radiobutton" ></div>
				        <input type="radio" name="search" disabled class="__searchType">
				        <label style="color: #FFF !important;font-size: 1.1rem;text-transform: uppercase;font-weight: 400;opacity: .8;">Locations (Comming Soon)</label>
				      </div>
				    </div>
						   
						    
						</div>
			          	<!-- ko if:searchType()=='project' -->
			          		<h1 class="ui inverted header">Explore Projects</h1>
			          	<!-- /ko -->
			          	<!-- ko if:searchType()=='agent' -->
			          		<h1 class="ui inverted header">Explore Agents</h1>
			          	<!-- /ko -->
			          	<!-- ko if:searchType()=='locality' -->
			          		<h1 class="ui inverted header">Explore Localities</h1>
			          	<!-- /ko -->
			          <div id="search-box" class="large basic inverted animated fade ui">
			            <div class="ui fluid category search">
						  <div class="ui icon input _main_">
							<input class="prompt" id="__searchHome" name="name" type="text" data-bind="attr:{placeholder:placeholderVal()}" >
				          </div>
						  <div class="results"></div>
						</div>
			          </div>
			          <!-- Button and filter for search -->

				          	<div class="ui inverted menu" style="background:inherit;">
								<div id="search-filter" class="ui button"><i class="filter icon"></i>Filter</div>
					          	<button class="ui blue button" type="submit">Search</button>
					        </div>

						<!-- ends here -->
			        </form>
		        </div>
		      </div>
		    <% } %>
		<!-- ends here -->

	<% if(locals.req.device.type == 'desktop'){ %>

      <div class="column">
	    <div class="ui information visible">
	        <form data-bind="submit: searchFun" >
	          <div class="ui form">
	          	 <input type="hidden" name="projectId" placeholder="Search..." id="__projectId">
				  <div class="inline fields" style="min-width:360px !important; ">
				    <div class="field _sType_" data-attr="project">
				      <div class="ui radio checkbox checked _main_">
						<div class="radiobutton active"></div>
				        <input type="radio" name="search" class="__searchType"  value="project" checked="checked">
				        <label>Projects</label>
				      </div>
				    </div>
				    <div class="field _sType_" data-attr="agent">
				      <div class="ui radio checkbox _main_">
						<div class="radiobutton"></div>
				        <input type="radio" name="search" class="__searchType" value="agent">
				        <label>Agents</label>
				      </div>
				    </div>
				    <div class="field" data-attr="locality">
				      <div class="ui radio checkbox ">
						<div class="radiobutton" ></div>
				        <input type="radio" name="search" disabled class="__searchType"/>
