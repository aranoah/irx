	          	<!-- /ko -->
	          <div id="search-box" class="large basic inverted animated fade ui">
	            <div class="ui fluid category search">
				  <div class="ui icon input _main_">
						<div class="ui dropdown field" style="width:25%;padding-left:0 !important;">
						    <input type="hidden" name="city" data-bind="value:city" value="banglore"/>
						    <div class="default text _city_"><!-- ko text : showCity()--><!-- /ko --></div>
						    <i class="angle down icon" style="color: rgba(182, 182, 182, 0.82) !important;font-size: 1.2em;"></i>
						    <div class="menu" style="max-height: 20em;overflow-y: scroll;" id="mainSearchCity">
						      	<div class="ui icon search input">
						        	<i class="search icon"></i>
						        	<input type="text" name="search" placeholder="Search city..."/>
						      	</div>
						      	<div class="divider"></div>
						      	<div class="header">
						        	<i class="tags icon"></i>
						       		Select City
						      	</div>
						      	
						 	</div>
						</div>					 
		          		<input class="prompt" id="__searchHome" name="name" type="text" data-bind="attr:{placeholder:placeholderVal()}" >
		      
				    <i class="search icon">
						<button type="submit">Search</button>
					</i>

				  </div>
				  <div class="results"></div>
				</div>

				<div class="inline fields" >
					<div class="ui dropdown field">
						<input type="hidden" name="action" id="_actn_">
					  <div class="text">Action</div>
					  <i class="angle down icon"></i>
					  <div class="menu abx">
					    <div class="item bud_opt">Rent</div>
					    <div class="item bud_opt">Buy</div>
					  </div>
					</div><div class="ui dropdown field">
					<input type="hidden" name="bhk">
					  <div class="text">BHK</div>
					  <i class="angle down icon"></i>
					  <div class="menu drop">
					    <div class="item bud_opt" data-value="1">1bhk</div>
					    <div class="item bud_opt" data-value="2">2bhk</div>
					    <div class="item bud_opt" data-value="3">3bhk</div>
					    <div class="item bud_opt" data-value="4">4bhk</div>
					  </div>
					</div>

					<div class="ui dropdown field __budget__">
			          <div class="default text" id="_budget_">Budget Range</div>
