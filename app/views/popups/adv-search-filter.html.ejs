<!-- Advanced search filter popup -->
<style>
  #adv-search-filter>.content>.ui.grid {
    padding:0 !important;
  }
  #mobile .ui.selection.dropdown {
    min-width:240px !important;
  }
  #mobile .ui.selection.dropdown>.text {
    min-width:180px !important;
    max-width:180px !important;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
    margin-right:0 !important;
  }
  .minCostLeft.__visible>* {
    float: none !important;
    white-space: normal;
    width: 100%;
}
.ui.dropdown .menu>.header {
    margin: .75rem 0;  padding: 0 1rem;
}
</style>
<script type="text/javascript" src="/js/common/http.js"></script>
<form class="ui form" >
<div id="adv-search-filter" class="ui modal pop-up sell-post">  
  <div class="content">
    <div class="ui grid">
      <h2 class="ui header eight wide column">Advanced Search Filter</h2>
      <i class="column right floated remove circle close icon"></i>
    </div>
  </div>

  <div id="lower-content" class="actions ui grid">
    
    <!--advanced search filter starts here -->
        <input type="hidden" data-bind="value:data.origin" value="post-req">  

        <% if(locals.req.device.type != 'desktop'){ %>
        
          <div id="mobile" class="ui inverted menu">

        <% } %>

        <% if(locals.req.device.type == 'desktop'){ %>
        
          <div id="desktop" class="ui inverted menu">

        <% } %>

          <h4 class="ui dividing header">Select your filter :</h4>

            <div class="item">
              <div class="ui selection dropdown">
                <input type="hidden" name="city" data-bind="value:city">
                <div class="default text" style="min-width:14rem;margin-right:0 !important;">Select City</div>
                <i class="angle down icon"></i>
                <div class="menu" style="overflow-x: hidden;overflow-y: scroll;max-height: 500px;">
                  <div class="ui icon search input">
                    <i class="search icon"></i>
                    <input type="text" name="city" placeholder="Search city..."style="width:14rem;">
                  </div>
                  <div class="divider"></div>
                  <div class="header">
                    <i class="tags icon"></i>
                   Select City
                  </div>
                  <% include ../partials/city.html.ejs %>
                </div>
              </div>
            </div>
            
            <div class="item">
              <div class="ui selection dropdown">
                <input type="hidden" name="buy" data-bind="value:data.action">
                <div class="default text">Action</div>
                <i class="angle down icon"></i>
                <div class="menu">
                  <div class="item" data-value="rent">Rent</div>
                  <div class="item" data-value="buy">Buy</div>
                </div>
              </div>
            </div>

            <div class="item">
              <div class="ui selection dropdown" >
                <input type="hidden" name="bhk" data-bind="value:data.bhk">
                <div class="default text">BHK</div>
                <i class="angle down icon"></i>
                <div class="menu">
                  <div class="item" data-value="1">1bhk</div>
                  <div class="item" data-value="2">2bhk</div>
                  <div class="item" data-value="3">3bhk</div>
                  <div class="item" data-value="4">4bhk</div>
                </div>
              </div>
            </div>
            <div class="item right floated" style="padding-top:1rem;margin-right:5.5rem;">
               <div class="ui blue button buttonClass" data-bind="click: captureLeads">Submit</div>
            </div>
        </div>

        

    <!-- Ends here -->  
  </div>
</div>
</form>