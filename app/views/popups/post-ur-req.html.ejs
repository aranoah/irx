<!-- Sell-ur-property popup -->
<script type="text/javascript" src="/js/common/http.js"></script>
<div id="post" class="ui modal pop-up sell-post">  
  <div class="content">
    <div class="ui grid">
      <h2 class="ui header eight wide column">Post your requirement</h2>
      <i class="column right floated remove circle close icon"></i>
    </div>
  </div>
  <div id="lower-content" class="actions ui grid">
    
    <!-- sell your property starts here -->
        
        <div class="ui inverted menu">
          <h4 class="ui dividing header">Property Information :</h4>
            <div class="item">
              <div class="ui selection dropdown">
                <input type="hidden" name="city">
                <div class="default text">City</div>
                <i class="angle down icon"></i>
                <div class="menu">
                  <div class="item" data-value="NewD">New Delhi</div>
                  <div class="item" data-value="Bang">Bangalore</div>
                  <div class="item" data-value="Mum">Mumbai</div>
                  <div class="item" data-value="Che">Chennai</div>
                </div>
              </div>
            </div>
            <div class="item">
              <div class="ui selection dropdown">
                <input type="hidden" name="type">
                <div class="default text">Type</div>
                <i class="angle down icon"></i>
                <div class="menu">
                  <div class="item" data-value="Rent">Rent</div>
                  <div class="item" data-value="sale">Resale</div>
                  <div class="item" data-value="land">Land</div>
                  <div class="item" data-value="proj">Project</div>
                </div>
              </div>
            </div>
            <div class="item">
              <div class="ui selection dropdown">
                <input type="hidden" name="bhk">
                <div class="default text">BHK</div>
                <i class="angle down icon"></i>
                <div class="menu">
                  <div class="item" data-value="1">1bhk</div>
                  <div class="item" data-value="2">2bhk</div>
                  <div class="item" data-value="3">3bhk</div>
                  <div class="item" data-value="4">4bhk</div>
                </div>
              </div>
            </div>
            <div class="item">
              <div class="ui selection dropdown">
                <input type="hidden" name="buy">
                <div class="default text">Buy</div>
                <i class="angle down icon"></i>
                <div class="menu">
                  <div class="item" data-value="Sell">Sell</div>
                </div>
              </div>
            </div>
            <div class="item field">
              <input type="text" placeholder="Name">
            </div>
            <div class="item field">
              <input type="text" placeholder="Location">
            </div>
            <div class="field item">
              <textarea placeholder="Write few words about your property..."></textarea>
            </div>
        </div>

        <div class="ui inverted menu contact">
          <h4 class="ui dividing header">Contact Information :</h4>
          <div class="ui form">
              <h5 for="user">you are a:</h5>
              <div class="field">
                <div class="ui radio checkbox">
                  <input type="radio" name="user" checked="checked">
                  <label>Individual</label>
                </div>
              </div>
              <div class="field">
                <div class="ui radio checkbox">
                  <input type="radio" name="user">
                  <label>Dealer</label>
                </div>
              </div>
          </div>      
          <div class="item field">
            <input type="text" placeholder="Name">
          </div>
          <div class="item field">
            <input type="text" placeholder="Email">
          </div>            
          <div class="item field">
            <input type="text" placeholder="Mobile">
          </div>
        </div>

        <div class="three column row">
          <div class="right floated column">
            <div class="ui submit button">Submit</div>
          </div>
          <div class="left floated column">
            <div class="ui checkbox">
              <input type="checkbox">
              <label>Also create a login</label>
            </div>
          </div>
        </div>

    <!-- Ends here -->  
  </div>
</div>
 <script type="text/javascript" src="/js/common/common.js"></script>
 <script>
  $(document).ready(function(){
    var common = new Common();
    common.init();
  })
 </script>